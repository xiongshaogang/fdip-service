@Service
public class CapitalAllocationService {
	
	@Autowired
	CapitalAllocationMapper capitalAllocationMapper;
	
	@Autowired
	RestTemplate restTemplate;

	/**
	 * 同花顺金个人基金账户到同花顺余额账户的资金转入
	 * @param channel
	 * @param bigDecimal
	 */
	@Transactional
	public void transferAmount(String channel,BigDecimal bigDecimal){
		String params="";
		restTemplate.postForEntity("", params, String.class);
		CapitalAllocation capitalAllocation=new CapitalAllocation("",bigDecimal,true,new Date());
		capitalAllocationMapper.insert(capitalAllocation);
	}
	
}
